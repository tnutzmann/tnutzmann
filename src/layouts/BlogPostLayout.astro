---
import BaseLayout from "./BaseLayout.astro";
import BlogHeader from "../components/layout/BlogHeader.astro"

const {frontmatter} = Astro.props;
---
<BaseLayout title={frontmatter.title}>
    <BlogHeader title={frontmatter.title} author={frontmatter.author} description={frontmatter.description} date={frontmatter.date} image={frontmatter.image} tags={frontmatter.tags}/>
    <slot/>
</BaseLayout>