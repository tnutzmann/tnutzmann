---
interface Props {
	title: string;
}

const { title } = Astro.props;
---
<header class="topnav">
    <a href="/">TNUTZMANN</a>
    <div></div>
    <a href="/blog">Blog</a>
    <a href="/projects">Projects</a>
    <a href="/contact">Contact</a>
</header>

<style>
.topnav {
    overflow: hidden;
    width: 100%;
    display: flex;
    flex-direction: row;
    gap: 1rem;
}

@media (max-width:480px) {
    .topnav {
        flex-direction: column;
    }
}

.topnav a {
    color: orange;
    text-align: center;
    text-decoration: none;
    font-size: 1.25rem;
}

.topnav div {
    flex-grow: 2; 
}

.topnav a:hover {
  color: #d4d4d4;
}

</style>